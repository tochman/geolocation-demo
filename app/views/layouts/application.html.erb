<!DOCTYPE html>
<html>
<head>
  <title>GeolocationDemo</title>
  <% if Rails.env.test? %>
    <%= tag.meta id: :fake_position, content: fake_location %>
  <% end %>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', data: {turbolinks: {track: 'reload'}} %>
  <%= javascript_include_tag 'application', data: {turbolinks: {track: 'reload'}} %>
</head>

<%= tag.body data: {geocoded: (@geocoded ? @geocoded : false), env: Rails.env} do %>
  <%= yield %>
<% end %>
</html>
